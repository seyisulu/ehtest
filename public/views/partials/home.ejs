<div>
  <md-content class="layout-fill">
    <md-card class="dialogdemoBasicUsage">
      <img ng-src="{{imagePath}}" class="md-card-image" alt="eHospital Banner">
      <md-card-content>
        <section layout="row" layout-sm="column" layout-align="end center" layout-wrap>
          <md-button class="groupX left md-raised md-warn" ng-click="showRegister($event)">
            <md-icon md-svg-src="img/icons/white/user-plus.svg"></md-icon>&nbsp;&nbsp;Register
          </md-button>
          <md-button class="groupX right md-raised md-primary" ng-click="showLogin($event)">
            <md-icon md-svg-src="img/icons/white/enter.svg"></md-icon>&nbsp;&nbsp;Login
          </md-button>
        </section>
      </md-card-content>
    </md-card>    
    <br/>
    <md-card class="gridListdemoDynamicTiles">
      <md-toolbar md-scroll-shrink>
        <div class="md-toolbar-tools">Hospitals With Us</div>
      </md-toolbar>
      <md-card-content>
        <md-grid-list
            md-cols-sm="1" md-cols-md="2" md-cols-gt-md="6"
            md-row-height-gt-md="1:1" md-row-height="4:3"
            md-gutter="8px" md-gutter-gt-sm="4px" >
        <md-grid-tile ng-repeat="hospital in hospitalist"
                      md-rowspan="1"
                      md-colspan="1"
                      md-colspan-sm="1"
                      ng-class="darkBlue" >
          <md-icon md-svg-icon="avatar:svg-{{$index+1}}"></md-icon>
          <md-grid-tile-footer><h3>{{hospital.name}}</h3></md-grid-tile-footer>
        </md-grid-tile>
      </md-grid-list>
      </md-card-content>
    </md-card>
  </md-content>
</div>