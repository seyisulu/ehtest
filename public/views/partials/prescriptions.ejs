<div>
  <md-content class="layout-fill gridListdemoBasicUsage">
    <md-card class="">
      <md-toolbar md-scroll-shrink>
        <div class="md-toolbar-tools">Prescriptions</div>
      </md-toolbar>
      <md-card-content>

        <md-grid-list
              md-cols-sm="1" md-cols-md="2" md-cols-gt-md="6"
              md-row-height-gt-md="1:1" md-row-height="2:2"
              md-gutter="12px" md-gutter-gt-sm="8px" >

          <h2 ng-show="previous.length<1">No prescriptions yet.</h2>

          <md-grid-tile class="yellow" md-rowspan="2" md-colspan="2" md-colspan-sm="2" ng-repeat="p in gps()">
            <p>{{p.lang}}</p>
            <md-list>              
              <md-list-item class="md-2-line" ng-repeat="drg in p.drugs">             
                <div class="md-list-item-text">
                  <h2 class="md-display-2"> {{ drg.name }} </h2>
                  <p class="md-display-1">Dosage: <strong>{{drg.dosage}}</strong><br />Frequency: <strong>{{drg.times}}</strong> times every <strong>{{drg.frequency}}</strong></p>                  
                </div>
              </md-list-item>
            </md-list>

            <md-grid-tile-footer>
              <h3>
                <md-button class="md-raised md-warn" ng-click="reminder(previous.indexOf(p), previous[previous.indexOf(p)].drugs.indexOf(drg))" style="margin-right:20px;" >
                  Remind
                </md-button>                
                (#{{$index+1}}) Phone: {{p.patient}}
              </h3>
            </md-grid-tile-footer>
          </md-grid-tile>

        </md-grid-list>
      </md-card-content>
    </md-card>
  </md-content>
</div>